<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DoorActivity">

    <androidx.constraintlayout.utils.widget.ImageFilterButton
        android:id="@+id/btn_fechar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="?attr/actionBarItemBackground"
        android:contentDescription="@string/label_fechar"
        android:src="@drawable/close_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/btn_fechar"
        app:layout_constraintEnd_toEndOf="@id/btn_fechar"
        app:layout_constraintTop_toBottomOf="@id/btn_fechar"
        android:text="Door"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/mtv_door"
        />
</androidx.constraintlayout.widget.ConstraintLayout>